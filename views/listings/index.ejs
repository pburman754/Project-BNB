<% layout('layouts/boilerplate')%>
<style>
  #filters-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-bottom: 1rem;
    gap: 1.5rem;
  }
  .scroll-btn {
    background: #ff385c;
    border: none;
    border-radius: 50%;
    width: 32px;      /* Decreased size */
    height: 32px;     /* Decreased size */
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #fff;
    font-size: 1.1rem; /* Decreased icon size */
    box-shadow: 0 2px 8px rgba(255,56,92,0.15);
    transition: background 0.2s, transform 0.2s;
    outline: none;
  }
  .scroll-btn:hover {
    background: #d90429;
    transform: scale(1.12);
  }
  #filters {
    display: flex;
    flex-wrap: nowrap;
    gap: 1.2rem;
    padding: 1rem 0;
    align-items: center;
    min-width: 700px;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  #filters::-webkit-scrollbar {
    display: none;
  }
  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f8f9fa;
    border-radius: 1rem;
    padding: 0.5rem 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    transition: box-shadow 0.2s, background 0.2s, opacity 0.2s;
    opacity: 0.85;
    cursor: pointer;
    border: 1px solid #e0e0e0;
    min-width: 80px;
  }
  .filter:hover {
    opacity: 1;
    background: #e9ecef;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }
  .filter i {
    font-size: 1.1rem;
    margin-bottom: 0.3rem;
    color: #495057;
  }
  .filter p {
    font-size: 0.85rem;
    margin: 0;
    color: #343a40;
    font-weight: 500;
  }
  .tax-toggle {
    border: 1px solid #ced4da;
    border-radius: 1rem;
    height: auto;
    padding: 0.5rem 1rem;
    background: #fff;
    margin-left: 1.5rem;
    display: flex;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    min-width: 180px;
  }
  @media (max-width: 900px) {
    #filters {
      min-width: 0;
      gap: 0.7rem;
    }
    .tax-toggle {
      margin-left: 0.7rem;
      padding: 0.4rem 0.7rem;
    }
    .scroll-btn {
      width: 28px;
      height: 28px;
      font-size: 0.95rem;
    }
    #filters-bar {
      gap: 0.7rem;
    }
  }
</style>

<body>
  <div id="filters-bar">
    <button class="scroll-btn" id="scroll-left" aria-label="Scroll left">
      <i class="fa-solid fa-chevron-left"></i>
    </button>
    <div id="filters">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castle</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing pools</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Farms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tents"></i>
        <p>Camping</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault"
          />
          <label class="form-check-label" for="flexSwitchCheckDefault"
            >Display total after taxes</label
          >
        </div>
      </div>
    </div>
    <button class="scroll-btn" id="scroll-right" aria-label="Scroll right">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) {%>
    <a class="listing-link" href="/listings/<%=listing.id%>">
      <div class="card listing-card">
        <img
          src="<%=listing.image.url%>"
          alt="Listing Image"
          class="card-img-top"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <div class="card-text">
            <p>
              <b> <%= listing.title %></b> <br />
              &#8377;<%=listing.price.toLocaleString("en-IN")%> /night
              <i class="tax-info">&nbsp;&nbsp;18% GST</i>
            </p>
          </div>
        </div>
      </div>
    </a>
    <%}%>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });

    // Scroll buttons functionality
    const filters = document.getElementById('filters');
    document.getElementById('scroll-left').onclick = () => {
      filters.scrollBy({ left: -200, behavior: 'smooth' });
    };
    document.getElementById('scroll-right').onclick = () => {
      filters.scrollBy({ left: 200, behavior: 'smooth' });
    };
  </script>
</body>
